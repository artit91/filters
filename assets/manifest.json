{
    "name": "Filters",
    "short_name": "Filters",
    "description": "Filters chrome extension",
    "version": "1.0.0",
    "manifest_version": 2,
    "author": "Attila Varga <artit91@gmail.com>",
    "app": {
        "background": {
            "scripts": ["background.js"],
            "persistent": false
        }
    },
    "minimum_chrome_version": "48.0.2564.109",
    "offline_enabled": true,
    "permissions": [
        "videoCapture",
        {"fileSystem": ["write"]},
        "clipboardRead"
    ],
    "icons": {
        "16": "ico16.png",
        "48": "ico48.png",
        "128": "ico128.png"
    }
}